local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player.PlayerGui)

-- Thông báo GUI
local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 300, 0, 100)
frame.Position = UDim2.new(0.5, -150, 0, -50)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.6
frame.BorderSizePixel = 0

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0.5, 0)
title.BackgroundTransparency = 1
title.Text = "Từ Capy Hub"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 20
title.TextAlign = Enum.TextAnchor.MiddleCenter
title.Font = Enum.Font.SourceSansBold

local text = Instance.new("TextLabel", frame)
text.Size = UDim2.new(1, 0, 0.5, 0)
text.Position = UDim2.new(0, 0, 0.5, 0)
text.BackgroundTransparency = 1
text.Text = "Bạn có muốn bật Anti AFK?"
text.TextColor3 = Color3.fromRGB(255, 255, 255)
text.TextSize = 16
text.TextAlign = Enum.TextAnchor.MiddleCenter
text.Font = Enum.Font.SourceSans

-- Nút Yes
local yesButton = Instance.new("TextButton", frame)
yesButton.Size = UDim2.new(0.5, -5, 0, 30)
yesButton.Position = UDim2.new(0, 5, 0.7, 0)
yesButton.Text = "Yes"
yesButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
yesButton.TextColor3 = Color3.fromRGB(255, 255, 255)
yesButton.Font = Enum.Font.SourceSans
yesButton.TextSize = 18

-- Nút No
local noButton = Instance.new("TextButton", frame)
noButton.Size = UDim2.new(0.5, -5, 0, 30)
noButton.Position = UDim2.new(0.5, 5, 0.7, 0)
noButton.Text = "No"
noButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
noButton.TextColor3 = Color3.fromRGB(255, 255, 255)
noButton.Font = Enum.Font.SourceSans
noButton.TextSize = 18

-- Hiệu ứng animation cho notification
local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out)
local goal = {Position = UDim2.new(0.5, -150, 0, 50)}

local tween = TweenService:Create(frame, tweenInfo, goal)
tween:Play()

-- Âm thanh khi nhấn Yes hoặc No
local clickSound = Instance.new("Sound")
clickSound.SoundId = "rbxassetid://183022052" -- ID âm thanh nhấn nút
clickSound.Parent = player.Character or player:WaitForChild("PlayerGui")

-- Hàm gọi khi nhấn Yes
yesButton.MouseButton1Click:Connect(function()
    clickSound:Play()
    print("Đã bật Anti AFK!")
    
    -- Thực hiện logic Anti AFK tại đây
    local vu = game:GetService("VirtualUser")
    local player = game:GetService("Players").LocalPlayer
    player.Idled:Connect(function()
        vu:CaptureController()
        vu:ClickButton2(Vector2.new(0, 0))
    end)

    -- Thông báo đã bật Anti AFK
    StarterGui:SetCore("SendNotification", {
        Title = "Thông Báo",
        Text = "Đã bật Anti AFK!",
        Duration = 5,
        Button1 = "Ok"
    })
    
    -- Đóng thông báo hiện tại
    frame:Destroy()
end)

-- Hàm gọi khi nhấn No
noButton.MouseButton1Click:Connect(function()
    clickSound:Play()
    print("Người chơi đã từ chối bật Anti AFK.")
    frame:Destroy()
end)
